<!--pages/split-input/split-input.wxml-->
<text>pages/split-input/split-input.wxml</text>
<view class='check-code-content {{isFocus==true&&"input-focus"}}'>
  <text class='{{inputValue.length==0&&"focus"}}'>{{inputValue[0]}}</text>
  <text class='{{inputValue.length==1&&"focus"}}'>{{inputValue[1]}}</text>
  <text class='{{inputValue.length==2&&"focus"}}'>{{inputValue[2]}}</text>
  <text class='{{inputValue.length>=3&&"focus"}}'>{{inputValue[3]}}</text>
  <input class="check-code" type="number" focus='true' bindinput='inputHandel' bindfocus='focusHandel' bindblur='blurHandel'></input>
</view>